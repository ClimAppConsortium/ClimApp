<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Style for slpash screen -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <!--Style for login activity -->
    <style name="LoginButtonStyle">
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">14dp</item>
    </style>

    <!-- Style for user input fields -->
    <style name="InputStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <!-- Dashboard card style -->
    <style name="DashboardTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:textColor">@color/tw__medium_gray</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!-- Settings-2 style -->
    <style name="SettingsTextStyle2">
        <item name="android:layout_margin">16dp</item>
        <item name="android:textSize">18dp</item>
    </style>

    <!-- Settings description style -->
    <style name="SettingsTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:textColor">@color/tw__medium_gray</item>
    </style>

    <!-- Settings description style no caps-->
    <style name="SettingsTextStyleNoCaps">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/tw__medium_gray</item>
    </style>

    <!-- CheckBox header styles -->
    <style name="CheckBoxStyle">
        <item name="android:textSize">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
