<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/WMatchHWrap">

    <LinearLayout
        style="@style/WMatchHWrap"
        android:orientation="vertical"
        android:layout_margin="20dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/clothing_customize_attire"
            android:textSize="26sp"
            android:layout_marginBottom="8dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/clothing_customize_attire_description"
            android:textSize="12sp"
            android:layout_marginBottom="16dp"/>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/colorLightGrey"/>
        <TextView
            android:layout_marginTop="8dp"
            style="@style/SmallDescriptiveTextStyleNoMargin"
            android:text="@string/field_of_work"/>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/field_of_work_spinner"
            android:entries="@array/field_of_work_array"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">
        </Spinner>
        <TextView
            android:layout_marginTop="8dp"
            style="@style/SmallDescriptiveTextStyleNoMargin"
            android:text="@string/clothing"/>
        <HorizontalScrollView
            style="@style/WrapWrap"
            android:orientation="horizontal">
            <LinearLayout
                style="@style/WrapWrap"
                android:orientation="horizontal">
                <ToggleButton
                    style="@style/TextOffStyle"
                    android:layout_margin="6dp"
                    android:background="@drawable/ic_hoodie_foreground" />
                <ToggleButton
                    style="@style/TextOffStyle"
                    android:layout_margin="6dp"
                    android:background="@drawable/ic_pants_foreground" />
                <ToggleButton
                    style="@style/TextOffStyle"
                    android:layout_margin="6dp"
                    android:background="@drawable/ic_tshirt_foreground" />
                <ToggleButton
                    style="@style/TextOffStyle"
                    android:layout_margin="6dp"
                    android:background="@drawable/ic_pants_foreground" />
            </LinearLayout>
        </HorizontalScrollView>
        <TextView
            android:layout_marginTop="8dp"
            style="@style/SmallDescriptiveTextStyleNoMargin"
            android:text="@string/outer_wear"/>
            <HorizontalScrollView
                style="@style/WrapWrap"
                android:orientation="horizontal">
                <LinearLayout
                    style="@style/WMatchHWrap"
                    android:orientation="horizontal">
                    <ToggleButton
                        style="@style/WMatchHWrap"
                        android:textOn="@string/no_text"
                        android:textOff="@string/no_text"
                        android:background="@drawable/ic_work_outer_foreground"
                        android:layout_margin="6dp"/>
                    <ToggleButton
                        style="@style/WMatchHWrap"
                        android:textOn="@string/no_text"
                        android:textOff="@string/no_text"
                        android:background="@drawable/ic_work_waffle_foreground"
                        android:layout_margin="6dp"/>
                    <ToggleButton
                        style="@style/WMatchHWrap"
                        android:textOn="@string/no_text"
                        android:textOff="@string/no_text"
                        android:background="@drawable/ic_work_pants_foreground"
                        android:layout_margin="6dp"/>
                    <ToggleButton
                        style="@style/WMatchHWrap"
                        android:textOn="@string/no_text"
                        android:textOff="@string/no_text"
                        android:background="@drawable/ic_pants_foreground"
                        android:layout_margin="6dp"/>
                </LinearLayout>
            </HorizontalScrollView>
        <TextView
            android:layout_marginTop="8dp"
            android:text="@string/work_specific_attire"
            android:id="@+id/clothing_top"
            style="@style/SmallDescriptiveTextStyleNoMargin"/>
            <HorizontalScrollView
                style="@style/WMatchHWrap"
                android:orientation="horizontal"
                android:id="@+id/construction_specific">
                <LinearLayout
                    style="@style/WMatchHWrap"
                    android:orientation="horizontal">
                    <ToggleButton
                        style="@style/WMatchHWrap"
                        android:textOn="@string/no_text"
                        android:textOff="@string/no_text"
                        android:background="@drawable/ic_helmet_foreground"
                        android:layout_margin="6dp"/>
                    <ToggleButton
                        style="@style/WMatchHWrap"
                        android:textOn="@string/no_text"
                        android:textOff="@string/no_text"
                        android:background="@drawable/ic_helmet_foreground"
                        android:layout_margin="6dp"/>
                    <ToggleButton
                        style="@style/WMatchHWrap"
                        android:textOn="@string/no_text"
                        android:textOff="@string/no_text"
                        android:background="@drawable/ic_helmet_foreground"
                        android:layout_margin="6dp"/>
                </LinearLayout>
            </HorizontalScrollView>
    </LinearLayout>
</ScrollView>