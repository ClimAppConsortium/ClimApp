<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/select_age_picker_string"
                    style="@style/SettingsTextStyleNoCaps"/>
                <EditText
                    android:id="@+id/user_input_age"
                    android:layout_height="wrap_content"
                    android:layout_width="270dp"
                    android:hint="@string/Input_age"
                    android:layout_gravity="center"
                    android:gravity="center"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="12dp"
                android:layout_gravity="center_horizontal">
                <TextView
                    android:id="@+id/userAge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:textSize="28sp"
                    android:text="@string/no_text"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/userAge"
                    android:text="@string/age_unit"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"
                    android:textAllCaps="true" />
            </RelativeLayout>
            <Button
                android:id="@+id/submit_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/set_age_button"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>