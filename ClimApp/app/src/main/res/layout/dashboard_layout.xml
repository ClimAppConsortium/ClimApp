<?xml version="1.0" encoding="utf-8"?>
<!-- The dashboard contents -->
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <android.support.v7.widget.CardView
                style="@style/CardViewFeedStyle">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="16dp">
                    <TextView
                        style="@style/SmallDescriptiveTextStyle"
                        android:id="@+id/dash_header"
                        android:text="Current" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Lund"
                        android:textAllCaps="true"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="16Â°"
                        android:textSize="30dp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/temp_info"
                            android:text="Temperature"
                            style="@style/DashboardTextStyleInfo"/>
                        <TextView
                            android:id="@+id/temp_value"
                            android:text="value"
                            style="@style/DashboardTextStyleInfo"
                            android:textAllCaps="false"
                            android:textStyle="bold"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/humidity_info"
                            android:text="Humdity"
                            style="@style/DashboardTextStyleInfo"/>
                        <TextView
                            android:id="@+id/humidity_value"
                            android:text="value"
                            style="@style/DashboardTextStyleInfo"
                            android:textAllCaps="false"
                            android:textStyle="bold"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/other_info"
                            android:text="missing"
                            style="@style/DashboardTextStyleInfo"/>
                        <TextView
                            android:id="@+id/other_value"
                            android:text="value"
                            style="@style/DashboardTextStyleInfo"
                            android:textAllCaps="false"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                style="@style/CardViewFeedStyle">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="16dp">
                    <TextView
                        style="@style/SmallDescriptiveTextStyle"
                        android:text="Activity level" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="How will your activity level be today?"
                        android:layout_marginBottom="8dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center">
                        <ToggleButton
                            android:id="@+id/dash_toggle_low"
                            style="@style/DashboardToggleButtonStyle"
                            android:textOn="Low"
                            android:textOff="Low" />
                        <ToggleButton
                            android:id="@+id/dash_toggle_medium"
                            style="@style/DashboardToggleButtonStyle"
                            android:textOn="Medium"
                            android:textOff="Medium"/>
                        <ToggleButton
                            android:id="@+id/dash_toggle_high"
                            style="@style/DashboardToggleButtonStyle"
                            android:textOn="High"
                            android:textOff="High"/>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                style="@style/CardViewFeedStyle">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="16dp">
                    <TextView
                        style="@style/SmallDescriptiveTextStyle"
                        android:text="Suggestions" />
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_alarm_black_24dp"
                        android:layout_margin="20dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Remember to drink water!"
                        android:textAlignment="center"
                        android:layout_marginBottom="20dp"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                style="@style/CardViewFeedStyle">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="16dp">
                    <TextView
                        android:text="Location"
                        style="@style/SmallDescriptiveTextStyle"/>
                    <Button
                        android:id="@+id/locationButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Location" />
                    <TextView
                        android:id="@+id/source_"
                        android:text="missing"
                        android:gravity="center"
                        style="@style/DashboardTextStyle"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/long_coord"
                            android:text="missing"
                            android:layout_weight="1"
                            android:gravity="center"
                            style="@style/DashboardTextStyle"/>
                        <TextView
                            android:id="@+id/lat_coord"
                            android:text="missing"
                            android:layout_weight="1"
                            android:gravity="center"
                            style="@style/DashboardTextStyle"/>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
